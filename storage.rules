rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for product images
    match /products/{userId}/{allPaths=**} {
      // Allow public read access so images can be displayed on the site.
      allow read: if true;

      // Allow write (create, update, delete) only if the user is authenticated
      // and their UID matches the {userId} in the path. This ensures users
      // can only upload to their own designated folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
