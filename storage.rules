rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Rules for product images
    // Only allow admin users to upload images to their own folder.
    // This prevents non-admins from uploading files, and admins from overwriting each other's files.
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && isAdmin();
    }
  }
}
