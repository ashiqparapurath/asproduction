rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Function to check if the user is an admin by looking for their UID
    // in the /roles_admin collection in Firestore.
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Rules for product images
    match /products/{allPaths=**} {
      // Allow anyone to read product images. This is necessary for them
      // to be displayed on the public-facing pages of the site.
      allow read: if true;

      // Only allow authenticated admins to upload, update, or delete images.
      // This secures your product assets from unauthorized modification.
      allow write: if request.auth != null && isAdmin();
    }
  }
}
